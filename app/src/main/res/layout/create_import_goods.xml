<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F4F4"
    tools:context=".MainActivity">

    <!-- Search Bar -->

    <!-- Filter Buttons -->

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="329dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:textColor="#333333"
        android:background="@drawable/rounded_searchview_background"
        android:padding="10dp"
        android:queryHint="Tìm mã nhập hàng" />

    <LinearLayout
        android:id="@+id/filter_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/filter_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:backgroundTint="#FFEBE8EF"
            android:text="Hôm nay" />

        <Button
            android:id="@+id/filter_this_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:backgroundTint="#FFEBE8EF"
            android:text="Tháng này" />

        <Button
            android:id="@+id/filter_last_month"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFEBE8EF"
            android:text="Tháng trước"
            android:textSize="14dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/order_item_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/filter_buttons"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"

        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_id_1"
                android:layout_width="73dp"
                android:layout_height="34dp"
                android:text="#NH5"
                android:textColor="@color/design_default_color_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_date_1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="16:37 27/05/24"
                android:textColor="#656464" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_status_1"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="end"
                android:paddingTop="8dp"
                android:paddingRight="10px"
                android:text="Đã thanh toán"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/order_total_1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="end"
                android:text="30.000"
                android:textColor="#4A4848"
                android:textSize="18sp"
                android:paddingRight="10px"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/create_order_button"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#7D47F6"
        android:text="Tạo nhập hàng"
        android:textColor="@android:color/white" />

</RelativeLayout>
