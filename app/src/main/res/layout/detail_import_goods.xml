<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F2F2"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText"><![CDATA[
        />
    ]]></androidx.appcompat.widget.Toolbar>
    <!-- Product Item -->

    <!-- Supplier Information -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_item"
        android:layout_width="414dp"
        android:layout_height="107dp"
        android:layout_marginTop="20dp"
        android:textColor="#575555"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.307" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Bàn chải"
            android:textSize="18sp"
            android:textColor="#3A3939"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/product_quantity_layout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/product_image"
            app:layout_constraintTop_toTopOf="@+id/product_image" />

        <TextView
            android:id="@+id/product_code"
            android:layout_width="68dp"
            android:layout_height="21dp"
            android:layout_marginTop="24dp"
            android:padding="1dp"
            android:text="SP0003"
            android:textColor="#3A3939"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@+id/product_quantity_layout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/product_image"
            app:layout_constraintTop_toTopOf="@+id/product_name" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Giá: 10.000"
            android:textSize="14sp"

            android:textColor="#3A3939"
            app:layout_constraintBottom_toBottomOf="@+id/product_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintStart_toEndOf="@+id/product_code"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_quantity_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/product_image">

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="4dp"
            android:text="30.000"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/product_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button_decrease"
            android:layout_width="64dp"
            android:layout_height="39dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="#FFFFFF"
            android:text="-"
            android:textColor="#0B0B0B"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="76dp"
            android:gravity="center"
            android:textColor="#3A3939"
            android:text="3"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/button_decrease"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_increase"
            android:layout_width="61dp"
            android:layout_height="39dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="#FFFFFF"
            android:text="+"
            android:textColor="#3C3838"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/total_price"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toEndOf="@+id/text_quantity"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/supplier_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhà Cung Cấp"
        android:textSize="16sp"
        android:textColor="#3A3939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_item"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/supplier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chọn nhà cung cấp"
        android:textSize="16sp"
        android:textColor="#3A3939"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/supplier_label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableEnd="@android:drawable/ic_menu_more" />

    <!-- Order Summary -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_summary"
        android:layout_width="385dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:textColor="#504D4D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/supplier">

        <TextView
            android:id="@+id/total_quantity_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tổng số lượng"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/total_quantity"
            android:layout_width="182dp"
            android:layout_height="23dp"
            android:text="3"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/total_quantity_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/total_amount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Tổng tiền hàng"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_quantity_label" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="183dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:text="30.000"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/total_amount_label"
            app:layout_constraintTop_toBottomOf="@id/total_quantity_label" />

        <TextView
            android:id="@+id/discount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Giảm giá"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_amount_label" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="183dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:text="0.000"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/discount_label"
            app:layout_constraintTop_toBottomOf="@id/total_amount_label" />

        <TextView
            android:id="@+id/additional_fee"
            android:layout_width="182dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:text="0.000"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/additional_fee_label"
            app:layout_constraintTop_toBottomOf="@id/discount_label" />

        <TextView
            android:id="@+id/total"
            android:layout_width="183dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:text="30.000"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/total_label"
            app:layout_constraintTop_toBottomOf="@id/additional_fee_label" />

        <TextView
            android:id="@+id/additional_fee_label"
            android:layout_width="109dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Chi phí phát sinh"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discount_label" />

        <TextView
            android:id="@+id/total_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Tổng cộng"
            android:textColor="#3A3939"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/additional_fee_label"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Order Notes -->

    <!-- Order Button -->

    <TextView
        android:id="@+id/order_note_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Ghi chú đơn hàng"
        android:textSize="16sp"
        android:textColor="#3A3939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_summary" />

    <EditText
        android:id="@+id/order_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#3A3939"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:drawableEnd="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_note_label" />

    <Button
        android:id="@+id/submit_order_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nhập hàng"
        android:background="@drawable/layout2"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="66dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-1dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="79dp"
            android:layout_marginBottom="19dp"
            android:layout_toStartOf="@+id/headerTitle"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20dp"
            android:text="Tạo nhập hàng"
            android:textColor="#3A3939"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
